@model ShoppingCartViewModel

@if (Model.ShoppingCart.ShoppingCartItems.Count > 0)
{ 
    <li>
        <a class="btn btn-success btn-sm ml-3" asp-controller="ShoppingCart" asp-action="Index">
            <i class="fa fa-shopping-cart"></i> Cart
            <span class="badge badge-light">@Model.ShoppingCart.ShoppingCartItems.Count</span>
        </a>
    </li>
}