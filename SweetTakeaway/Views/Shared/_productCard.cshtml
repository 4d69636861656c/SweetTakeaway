@model Product

<div class="col-12 col-md-6 col-lg-4" style="height: 28rem; width: 28rem; margin-bottom: 5px">
    <div class="card">
        <img class="card-img-top" src="@Model.ImageThumbnailUrl" style="height: 175px; width: auto; margin: 10px 10px 10px 10px;" alt="Product Image">
        <div class="card-body">
            <h5 class="card-title"><a asp-controller="Product" asp-action="Details" asp-route-productId="@Model.ProductId" title="View Product">@Model.Name</a></h5>
            <p class="card-text" style="font-size: 12px">@Model.ShortDescription</p>
            <div class="row">
                <div class="col">
                    <p class="btn btn-danger btn-block">@Model.Price.ToString("C")</p>
                </div>
                <div class="col">
                    <a class="btn btn-success btn-block" asp-controller="ShoppingCart" asp-action="AddToShoppingCart" asp-route-productId="@Model.ProductId">
                        <i class="fa fa-shopping-cart"></i> Add
                        <span class="badge badge-light"></span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>